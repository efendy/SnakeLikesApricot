<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff0000"/>
            <padding
                android:left="16dp"
                android:top="0dp"
                android:right="16dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff0000"/>
            <padding
                android:left="16dp"
                android:top="0dp"
                android:right="16dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF8A80"/>
            <padding
                android:left="16dp"
                android:top="0dp"
                android:right="16dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>